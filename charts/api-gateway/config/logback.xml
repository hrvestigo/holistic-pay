<configuration>

    <variable name="DEF_PATTERN" value="[%d] %p %c{1} %msg%n" />
    <variable name="HEALTH_PATTERN" value="%msg%n" />
    <variable name="LOG_FOLDER" value="/var/log/app" />


    <appender name="application" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FOLDER}/messages.log</file>
        <encoder>
            <pattern>${DEF_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${DEF_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="accessLog" class="ch.qos.logback.core.FileAppender">
        <filter class="hr.vestigo.apigateway.logging.HttpAccessLogHealthRemoveFilter" />
        <file>${LOG_FOLDER}/access.log</file>
        <encoder>
            <pattern>${HEALTH_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="async" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="accessLog" />
    </appender>

    <appender name="healthAccessLog" class="ch.qos.logback.core.FileAppender">
        <filter class="hr.vestigo.apigateway.logging.HttpAccessLogHealthOnlyFilter" />
        <file>${LOG_FOLDER}/health.log</file>
        <encoder>
            <pattern>${HEALTH_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="healthAsync" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="healthAccessLog" />
    </appender>


    <logger name="reactor.netty.http.server.AccessLog" level="INFO" additivity="false">
        <appender-ref ref="async" />
    </logger>

    <logger name="reactor.netty.http.server.AccessLog" level="INFO" additivity="false">
        <appender-ref ref="healthAsync" />
    </logger>

    <root>
        <appender-ref ref="application" />
        <appender-ref ref="STDOUT" />
    </root>

</configuration>