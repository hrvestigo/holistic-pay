<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
  {{- with .Values.logger }}
  <Properties>
    {{- if .logToFile }}
    <Property name="folder">{{ .logDir }}</Property>
    <Property name="fileName">application.log</Property>
    <Property name="fileNameTomcat">messages.log</Property>
    <Property name="fileNameHealth">health.log</Property>
    {{- end }}
    <Property name="defaultPattern">[%d] [%X{correlationId}] %p %c{1.} %replace{%m}{[a-zA-Z]{2}[0-9]{2}[a-zA-Z0-9]{4}[0-9]{7}([a-zA-Z0-9]?){0,16}}{*****}%n</Property>
    <Property name="healthPattern">[%d] [%X{correlationId}] %m%n</Property>

    <Property name="applicationAppender">Application</Property>
    <Property name="tomcatAppender">Tomcat</Property>
    <Property name="healthAppender">Health</Property>
    <Property name="consoleAppender">Console</Property>
  </Properties>

  <Appenders>
    <Console name="${consoleAppender}" target="SYSTEM_OUT">
      <PatternLayout pattern="${defaultPattern}"/>
    </Console>

    {{- if and .logToFile .rollingFileAppender }}
    <RollingFile name="${applicationAppender}" fileName="${folder}/${fileName}" filePattern="${folder}/${fileName}-%d{MM-dd-yyyy}.log">
      <PatternLayout>
        <Pattern>${defaultPattern}</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="1000"/>
    </RollingFile>

    <RollingFile name="${tomcatAppender}" fileName="${folder}/${fileNameTomcat}" filePattern="${folder}/${fileNameTomcat}-%d{MM-dd-yyyy}.log">
      <PatternLayout>
        <Pattern>${defaultPattern}</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="1000"/>
    </RollingFile>

    <RollingFile name="${healthAppender}" fileName="${folder}/${fileNameHealth}" filePattern="${folder}/${fileNameHealth}-%d{MM-dd-yyyy}.log">
      <PatternLayout>
        <Pattern>${healthPattern}</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="1000"/>
    </RollingFile>

    {{- else if .logToFile }}

    <File name="${applicationAppender}" fileName="${folder}/${fileName}">
      <PatternLayout>
        <Pattern>${defaultPattern}</Pattern>
      </PatternLayout>
    </File>

    <File name="${tomcatAppender}" fileName="${folder}/${fileNameTomcat}">
      <PatternLayout>
        <Pattern>${defaultPattern}</Pattern>
      </PatternLayout>
    </File>

    <File name="${healthAppender}" fileName="${folder}/${fileNameHealth}">
      <PatternLayout>
        <Pattern>${healthPattern}</Pattern>
      </PatternLayout>
    </File>
    {{- end }}
  </Appenders>

  <Loggers>
    <Logger name="hr.vestigo" level="DEBUG" additivity="false">
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>

    <Logger name="org.apache" level="INFO" additivity="false"> <!-- samo kafku logira, uključeno u ovaj ispod? -->
      {{- if .logToFile }}
      <AppenderRef ref="${tomcatAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>

    <Logger name="org.apache.kafka" level="INFO" additivity="false">
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>

    <Logger name="org.hibernate" level="INFO" additivity="false"> <!-- da li treba s obzirom da je većina već uključena u SQL i BasicBinder? -->
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>

    <Logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>

    <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>

    <Logger name="org.springframework" level="INFO" additivity="false">
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>

    <Logger name="org.springframework.orm.jpa" level="DEBUG" additivity="false">
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>

    <Logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="DEBUG" additivity="false"> <!-- ne koristi se? -->
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>

    <Logger name="org.springframework.boot.autoconfigure" level="ERROR" additivity="false"> <!-- ne koristi se? -->
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>

    {{- if .logToFile }}
    <Logger name="hr.vestigo.springtemplate.app.logging.AccessLogFilter" level="DEBUG" additivity="false">
      <AppenderRef ref="${healthAppender}"/>
    </Logger>
    {{- else }}
    <Logger name="hr.vestigo.springtemplate.app.logging.AccessLogFilter" level="ERROR" additivity="false">
      <AppenderRef ref="${consoleAppender}"/>
    </Logger>
    {{- end }}

    <Logger name="hr.vestigo.springtemplate.app.interceptors.CorrelationIdHttpInterceptor" level="DEBUG" additivity="false">
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
      <AppenderRef ref="${consoleAppender}" />
    </Logger>

    <Root level="INFO">
      <AppenderRef ref="${consoleAppender}"/>
      {{- if .logToFile }}
      <AppenderRef ref="${applicationAppender}"/>
      {{- end }}
    </Root>
  </Loggers>
  {{- end }}
</Configuration>